/* https://stackoverflow.com/a/61587938 */
.consistent-height .tab-content {
  display: flex;
}

.consistent-height .tab-content > .tab-pane {
  display: block; /* undo "display: none;" */
  visibility: hidden;
  margin-right: -100%;
  width: 100%;
}

.consistent-height .tab-content > .active {
  visibility: visible;
}

@keyframes fade-in {
  from {
    opacity: 0;
  }

  to {
    opacity: 1;
  }
}

body {
  opacity: 0;
  animation: fade-in ease-in 1;
  animation-fill-mode: forwards;
  animation-duration: 0.15s;
  animation-delay: .1s
}

.header-wrapper {
  background-color: #fff;
}

[data-bs-theme="dark"] .header-wrapper {
  background-color: #212121;
}

.theme-switcher {
  display: inline-block;
  vertical-align: middle;
  margin-bottom: 1rem;
  cursor: pointer;
}

.theme-icon {
  width: 1.5rem;
  height: 1.5rem;
}

.theme-light-icon path {
  fill: #fcdb33;
}

.theme-dark-icon path {
  fill: #63afc9;
}

h1.title a {
  text-decoration: none;
}

.code {
  font-family: monospace;
  max-height: 30rem;
  overflow-y: auto;
}

pre {
  padding: 1rem;
  border-radius: 10px;
}

div.language-console {
  margin: 1rem;
}

div.branding {
  text-align: right;
}

h1.title {
  display: inline;
}

.hidden {
  visibility: hidden;
}

.modal-body .row .col {
  padding-top: 1rem;
}

.page-tree ol, ol.page-tree {
  margin: 0;
  list-style-type: none;
  padding-left: 1rem;
}

ol.page-tree {
  padding-left: 0;
}

.page-tree li {
  line-height: 1.8rem;
  white-space: nowrap;
}

.page-tree li.active {
  list-style-type: square;
}

.page-tree li a {
  text-decoration: none;
}

.page-tree li a.active {
  font-weight: bold;
}

.header .separator {
  display: inline-block;
  height: 2.5rem;
}

.version {
  font-size: 2rem;
}

div.highlight {
  padding: 1rem;
  padding-bottom: 0.05rem;
  border-radius: 10px;
  margin-bottom: 2rem;
}

.highlight .go {
  color: #706d6d;
}

.ansi-html {
  display: inline-block;
  background-color: #2e2e2e;
  border: 5px solid #2e2e2e;
  border-radius: 10px;
}

.ansi-html .ansi-color-0 { color: #555555; }
.ansi-html .ansi-color-1 { color: #ff0000; }
.ansi-html .ansi-color-2 { color: #47ff47; }
.ansi-html .ansi-color-3 { color: #e9e947; }
.ansi-html .ansi-color-4 { color: #49a0dd; }
.ansi-html .ansi-color-5 { color: #8d7eeb; }
.ansi-html .ansi-color-6 { color: #2eecff; }
.ansi-html .ansi-color-7 { color: #ffffff; }
.ansi-html .ansi-color-9 { color: #606060; }
.ansi-html .ansi-color-reset { color: #dddddd; }
